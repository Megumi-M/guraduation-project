<div class= "container">
  <div class ="col-xs-12 col-md-10">
  <h4><i class="fas fa-book-open"></i>予約一覧</h4>

  <% @reservations_lessons.each do |reservation| %>
  <div class = "box1">
    <p>主催者：<%= reservation.user.name %></p>
    <p>タイトル：<%= reservation.title %></p>
    <p>開催日程：<%= reservation.event_date.strftime("%Y/%m/%d") %></p>
    <%= link_to '詳細確認へ', lesson_path(reservation.id), class: 'btn btn-primary' %>
  </div>
  <% end %>
  </div>
</div>