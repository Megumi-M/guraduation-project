<div class = "row">
  <div class ="col-xs-12 col-md-6 col-md-offset-2">
    <h4><i class="far fa-comment-alt"></i>メッセージ一覧</h4>
  </div>
  <div class = "col-md-6 col-md-offset-2">
    <table class="table table-hover">
      <tbody>
        <% @conversations.each do |conversation| %>
    　   <tr>
    　     <% if conversation.target_user(current_user).present? %>
          <td>
            <figure class="user-image">
              <% if conversation.target_user(current_user).icon? %>
                <%= image_tag conversation.target_user(current_user).icon %>
              <% else %>
                <%= image_tag "Noimage.png" %>
              <% end %>
            </figure>
          </td>
          <td>
            <%= link_to conversation.target_user(current_user).name, conversation_messages_path(conversation)%></td>
          </td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>