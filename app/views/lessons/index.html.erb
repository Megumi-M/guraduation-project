<div class = "container-fluid">  
  <div class = "row">
    <div class ="col-xs-12 col-md-10">
      <h4>レッスン一覧</h4>
        <h5>キーワードで検索</h5>
        <%= form_with(url: lessons_path, method: 'get') do |form| %>
          <%= form.text_field :keyword, placeholder: "キーワードを入力 [例：和食、開催地など]", class: "search_field col-md-4" %>
          <%= form.submit "検索", class: "btn btn-primary" %>
        <% end %>
        </br>
        <%= link_to '検索条件のクリア', lessons_path %>
      
      <section id="search_area">
      <%= render partial: 'index', locals: { lessons: @lessons } %>
      </section>
    </div>
  </div>
</div>